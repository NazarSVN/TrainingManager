<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:backgroundTint="#2d3c36"
                android:clipToOutline="true"
                android:background="@drawable/rounded_bg">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Опишіть вашу проблему"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/jura_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ваше ім’я:"
                    android:textColor="#cccccc"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/jura_bold"/>

                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_bg_support"
                    android:padding="12dp"
                    android:fontFamily="@font/jura_bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#888888"
                    android:hint="Ім’я" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ваш e-mail:"
                    android:textColor="#cccccc"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/jura_bold"/>

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="@font/jura_bold"
                    android:background="@drawable/edittext_bg_support"
                    android:padding="12dp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#888888"
                    android:hint="example@email.com"
                    android:inputType="textEmailAddress"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ваша проблема:"
                    android:textColor="#cccccc"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/jura_bold"/>

                <EditText
                    android:id="@+id/problemInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/edittext_bg_support"
                    android:padding="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/jura_bold"
                    android:textColorHint="#888888"
                    android:hint="Опишіть тут..."
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:overScrollMode="always"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:id="@+id/save_image"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/rounded_button"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Відправити"
                        android:textColor="#111111"
                        android:fontFamily="@font/jura_bold"
                        android:textSize="18sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                </RelativeLayout>
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
  </ScrollView>
</android.support.constraint.ConstraintLayout>