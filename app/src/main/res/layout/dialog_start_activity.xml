<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2720">

    <com.example.training_manager.TopCropImageView
        android:id="@+id/bg_girl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/girl_bg" />

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/cancel_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="54dp"
        android:contentDescription="Back"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/black_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/black_rectangle"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ТРЕНЕРУЙСЯ З НАМИ!"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#CCCECF"
            android:fontFamily="@font/jura_bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Розвивай силу, витривалість і гнучкість\nу комфортному ритмі."
            android:textSize="15sp"
            android:textColor="#54585E"
            android:gravity="center"
            android:fontFamily="@font/jura_bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/rounded_button"
            android:text="Розпочати тренування"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/jura_bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</RelativeLayout>