<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="#1F2720">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/helloText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Vlad"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/jura_bold"/>
    </LinearLayout>

    <!-- Вкладки -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        tools:ignore="NotSibling"
        >

        <TextView
            android:id="@+id/tabProgress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Прогрес"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="8dp"
            android:fontFamily="@font/jura_bold"/>

        <TextView
            android:id="@+id/tabSupport"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Підтримка"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="8dp"
            android:fontFamily="@font/jura_bold"/>

        <TextView
            android:id="@+id/tabInstruction"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Інструкція"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="8dp"
            android:fontFamily="@font/jura_bold"/>
    </LinearLayout>

    <!-- Прогресс бар -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_bg"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пройдено (10%)"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/jura_bold"/>

        <SeekBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:progressTint="#E2F560"
            android:thumb="@android:color/transparent"/>
    </LinearLayout>

    <!-- Блок профиля -->
    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:fontFamily="@font/jura_bold"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="134dp"
            android:layout_height="33dp"
            android:background="@drawable/rectangle_2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/icon_profile"
                android:src="@drawable/icon_person" />

            <TextView
                android:id="@+id/profileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:fontFamily="@font/jura_bold"
                android:text="@string/profile"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назаренко Владислав"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/jura_bold"/>

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85 kg"
            android:textColor="#C3FF00"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/jura_bold"/>

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="183 cm"
            android:textColor="#C3FF00"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/jura_bold"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 year"
            android:textColor="#C3FF00"
            android:textSize="16sp"
            android:fontFamily="@font/jura_bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>