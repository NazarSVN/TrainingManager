<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="text_who_we_are">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="text_who_we_are_2">
        <item name="android:textSize">26sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#B5D48C</item>
        <item name="android:shadowColor">#B5D48C</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">100</item>
    </style>

    <style name="TabLayoutStyle">
        <!-- Изменяем шрифт для вкладок -->
        <item name="tabTextAppearance">@style/CustomTabTextStyle</item>
    </style>
    <style name="CustomTabTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/jura_bold</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>